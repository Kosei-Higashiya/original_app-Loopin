<div class="container mt-4">
  <h1>管理者モード - ユーザー管理</h1>
  
  <div class="mb-3">
    <%= link_to "投稿管理", admin_posts_path, class: "btn btn-primary" %>
    <%= link_to "ダッシュボードに戻る", dashboard_path, class: "btn btn-secondary" %>
  </div>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">ユーザー一覧（全<%= @users.count %>件）</h5>
      
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>名前</th>
              <th>メール</th>
              <th>管理者</th>
              <th>登録日</th>
              <th>投稿数</th>
              <th>習慣数</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.display_name %></td>
                <td><%= user.email %></td>
                <td>
                  <% if user.admin? %>
                    <span class="badge bg-danger">管理者</span>
                  <% else %>
                    <span class="badge bg-secondary">一般</span>
                  <% end %>
                </td>
                <td><%= l(user.created_at, format: :short) %></td>
                <td><%= user.posts.count %></td>
                <td><%= user.habits.count %></td>
                <td>
                  <% unless user.admin? %>
                    <%= button_to "削除", admin_user_path(user), 
                        method: :delete,
                        data: { turbo_confirm: "ユーザー「#{user.display_name}」を削除しますか？関連する全てのデータも削除されます。" },
                        class: "btn btn-danger btn-sm" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
