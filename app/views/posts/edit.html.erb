<div class="container-fluid mt-4 px-4">
  <div class="row justify-content-center">
    <div class="col-12 col-xl-10">
      <div class="card shadow-lg border-2" style="border-color: #007bff;">
        <div class="card-header bg-warning text-dark text-center py-5">
          <h1 class="card-title mb-3" style="font-size: 2rem;">✏️ 投稿を編集</h1>
          <p class="mb-0" style="font-size: 1.2rem;">投稿内容を編集してください</p>
        </div>
        <div class="card-body p-5">

          <%= form_with(model: @post, local: true) do |form| %>
            <% if @post.errors.any? %>
              <div class="alert alert-danger">
                <h6><%= pluralize(@post.errors.count, "つのエラー") %>があります:</h6>
                <ul class="mb-0">
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-5">
              <%= form.label :habit_id, "習慣を選択", class: "form-label fw-bold", style: "font-size: 1.3rem;" %>
              <div class="mt-2">
                <%= form.collection_select :habit_id, @user_habits, :id, :title,
                      { prompt: "習慣を選択してください" },
                      { class: "form-select form-select-lg w-100", style: "font-size: 1.1rem; padding: 1rem;" } %>
              </div>
            </div>

            <div class="mb-5">
              <%= form.label :content, "投稿内容", class: "form-label fw-bold", style: "font-size: 1.3rem;" %>
              <div class="mt-2">
                <%= form.text_area :content, class: "form-control form-control-lg w-100", rows: 6,
                    placeholder: "今日の習慣の取り組みや感想を書いてください...",
                    style: "font-size: 1.1rem; padding: 1rem; line-height: 1.6; resize: vertical; width: 70%;" %>
              </div>
            </div>

            <div class="mb-5">
              <%= form.label :image, "画像URL（任意）", class: "form-label fw-bold", style: "font-size: 1.3rem;" %>
              <div class="mt-2">
                <%= form.text_field :image, class: "form-control form-control-lg w-100",
                    placeholder: "画像のURLを入力してください（任意）",
                    style: "font-size: 1.1rem; padding: 1rem; width: 70%;" %>
                <small class="form-text text-muted mt-2" style="font-size: 1rem;">習慣に関連する画像のURLを入力できます</small>
              </div>
            </div>

            <div class="mb-5">
              <%= form.label :tag_list, "タグ", class: "form-label fw-bold", style: "font-size: 1.3rem;" %>
              <div class="mt-2">
                <%= form.text_field :tag_list, class: "form-control form-control-lg w-100",
                    placeholder: "勉強, 運動, 読書 (カンマ区切りで複数入力可)",
                    style: "font-size: 1.1rem; padding: 1rem; width: 30%;" %>
                <small class="form-text text-muted mt-2" style="font-size: 1rem;">タグをカンマ区切りで入力してください（例：勉強, 運動, 読書）</small>
              </div>
            </div>

            <div class="text-center mt-5 pt-4">
              <%= form.submit "更新する", class: "btn btn-warning btn-lg px-5 me-4",
                  style: "font-size: 1.2rem; padding: 1rem 2.5rem; margin-top: 1rem;" %>
              <%= link_to "キャンセル", posts_path, class: "btn btn-primary btn-lg px-5",
                  style: "font-size: 1.2rem; padding: 1rem 2.5rem;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
