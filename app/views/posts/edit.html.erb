<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="card shadow-lg border-2" style="border-color: #007bff;">
        <div class="card-header bg-warning text-dark text-center py-5">
          <h1 class="card-title mb-3" style="font-size: 2.5rem;">✏️ 投稿を編集</h1>
          <p class="mb-0" style="font-size: 1.2rem;">投稿内容を編集してください</p>
        </div>
        <div class="card-body p-5">

          <%= form_with(model: @post, local: true) do |form| %>
            <% if @post.errors.any? %>
              <div class="alert alert-danger">
                <h6><%= pluralize(@post.errors.count, "つのエラー") %>があります:</h6>
                <ul class="mb-0">
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-5">
              <%= form.label :habit_id, "習慣を選択", class: "form-label fw-bold", style: "font-size: 1.3rem;" %>
              <div class="mt-2">
                <%= form.collection_select :habit_id, @user_habits, :id, :title, 
                      { prompt: "習慣を選択してください" }, 
                      { class: "form-select form-select-lg", style: "font-size: 1.1rem; padding: 1rem;" } %>
              </div>
            </div>

            <div class="mb-5">
              <%= form.label :content, "投稿内容", class: "form-label fw-bold", style: "font-size: 1.3rem;" %>
              <div class="mt-2">
                <%= form.text_area :content, class: "form-control form-control-lg", rows: 8,
                    placeholder: "今日の習慣の取り組みや感想を書いてください...", 
                    style: "font-size: 1.1rem; padding: 1rem; line-height: 1.6;" %>
              </div>
            </div>

            <div class="mb-5">
              <%= form.label :image, "画像URL（任意）", class: "form-label fw-bold", style: "font-size: 1.3rem;" %>
              <div class="mt-2">
                <%= form.text_field :image, class: "form-control form-control-lg", 
                    placeholder: "画像のURLを入力してください（任意）",
                    style: "font-size: 1.1rem; padding: 1rem;" %>
                <small class="form-text text-muted mt-2" style="font-size: 1rem;">習慣に関連する画像のURLを入力できます</small>
              </div>
            </div>

            <div class="text-center mt-5 pt-4">
              <%= form.submit "更新する", class: "btn btn-warning btn-lg px-5 me-4", 
                  style: "font-size: 1.3rem; padding: 1rem 2.5rem;" %>
              <%= link_to "キャンセル", posts_path, class: "btn btn-secondary btn-lg px-5", 
                  style: "font-size: 1.3rem; padding: 1rem 2.5rem;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>