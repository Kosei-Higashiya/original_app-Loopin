<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="card shadow-lg border-2" style="border-color: #007bff;">
        <div class="card-header bg-primary text-white text-center py-4">
          <h1 class="card-title mb-2" style="font-size: 2rem;">📝 みんなの習慣に投稿</h1>
          <p class="mb-0" style="font-size: 1.1rem;">あなたの習慣を選んで、コミュニティにシェアしましょう</p>
        </div>
        <div class="card-body p-5">

          <%= form_with(model: @post, local: true) do |form| %>
            <% if @post.errors.any? %>
              <div class="alert alert-danger">
                <h6><%= pluralize(@post.errors.count, "つのエラー") %>があります:</h6>
                <ul class="mb-0">
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-4">
              <%= form.label :habit_id, "習慣を選択", class: "form-label fw-bold", style: "font-size: 1.1rem;" %>
              <%= form.collection_select :habit_id, @user_habits, :id, :title, 
                    { prompt: "習慣を選択してください" }, 
                    { class: "form-select form-select-lg" } %>
            </div>

            <div class="mb-4">
              <%= form.label :content, "投稿内容", class: "form-label fw-bold", style: "font-size: 1.1rem;" %>
              <%= form.text_area :content, class: "form-control form-control-lg", rows: 6,
                  placeholder: "今日の習慣の取り組みや感想を書いてください...", style: "font-size: 1rem;" %>
            </div>

            <div class="mb-4">
              <%= form.label :image, "画像URL（任意）", class: "form-label fw-bold", style: "font-size: 1.1rem;" %>
              <%= form.text_field :image, class: "form-control form-control-lg", 
                  placeholder: "画像のURLを入力してください（任意）" %>
              <small class="form-text text-muted">習慣に関連する画像のURLを入力できます</small>
            </div>

            <div class="text-center mt-5">
              <%= form.submit "投稿する", class: "btn btn-primary btn-lg px-5 me-3", style: "font-size: 1.2rem;" %>
              <%= link_to "キャンセル", posts_path, class: "btn btn-secondary btn-lg px-5", style: "font-size: 1.2rem;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>