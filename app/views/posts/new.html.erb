<div class="container-fluid mt-4 px-4">
  <div class="row justify-content-center">
    <div class="col-md-12 col-xl-10">
      <div class="card shadow-lg border-2" style="border-color: #007bff;">
        <div class="card-header bg-primary text-white text-center py-4">
          <h1 class="card-title mb-2" style="font-size: 2rem;">📝 みんなの習慣に投稿</h1>
          <p class="mb-0" style="font-size: 1.1rem;">あなたの習慣を選んで、コミュニティにシェアしましょう</p>
        </div>
        <div class="card-body p-5">

          <%= form_with(model: @post, local: true) do |form| %>
            <% if @post.errors.any? %>
              <div class="alert alert-danger mb-4" style="border-radius: 0.7rem;">
                <h6 class="mb-2" style="font-size: 1.1rem;"><%= pluralize(@post.errors.count, "つのエラー") %>があります:</h6>
                <ul class="mb-0">
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-5" style="margin-top: 0.5rem;">
              <%= form.label :habit_id, "習慣を選択", class: "form-label fw-bold", style: "font-size: 1.3rem; color: #495057;" %>
                <%= form.collection_select :habit_id, @user_habits, :id, :title,
                      { prompt: "習慣を選択してください" },
                      { class: "form-select form-select-lg", style: "font-size: 1.1rem; padding: 1rem; border-radius: 0.7rem; border: 2px solid #e9ecef; width: 25%; margin-top: 0.5rem;" } %>
              </div>
            </div>

            <div class="mb-5" style="margin-top: 1rem;">
              <%= form.label :content, "投稿内容", class: "form-label fw-bold", style: "font-size: 1.3rem; color: #495057;" %>
              <div class="mt-2">
                <%= form.text_area :content, class: "form-control form-control-lg", rows: 6,
                    placeholder: "今日の習慣の取り組みや感想を書いてください...",
                    style: "font-size: 1.1rem; padding: 1rem; line-height: 1.6; resize: vertical; border-radius: 0.7rem; border: 2px solid #e9ecef; width: 50%; margin-top: 0.5rem; margin-bottom: 0.5rem;" %>
                <small class="form-text text-muted mt-2" style="font-size: 1rem;">習慣の取り組みや感想を記載してください</small>
              </div>
            </div>

            <div class="mb-5" style="margin-top: 1rem;">
              <%= form.label :tag_list, "タグ", class: "form-label fw-bold", style: "font-size: 1.3rem; color: #495057;" %>
              <div class="mt-2">
                <%= form.text_field :tag_list, class: "form-control form-control-lg",
                    placeholder: "勉強, 運動, 読書 (カンマ区切りで複数入力可)",
                    style: "font-size: 1.1rem; padding: 1rem; border-radius: 0.7rem; border: 2px solid #e9ecef; width: 50%; margin-top: 0.5rem; margin-bottom: 0.5rem;" %>
                <small class="form-text text-muted mt-2" style="font-size: 1rem;">タグをカンマ区切りで入力してください（例：勉強, 運動, 読書）</small>
              </div>
            </div>

            <div class="mb-3">
              <%= form.submit "投稿する", class: "btn btn-primary" %>
              <%= link_to "キャンセル", posts_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
