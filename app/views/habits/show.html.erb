<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= @habit.title %></h1>

          <% if @habit.description.present? %>
            <div class="mb-3">
              <h6 class="text-muted">詳細</h6>
              <p class="card-text"><%= simple_format(@habit.description) %></p>
            </div>
          <% end %>

          <div class="mb-3">
            <h6 class="text-muted">ステータス</h6>
            <span class="badge <%= @habit.active? ? 'bg-success' : 'bg-secondary' %>">
              <%= @habit.active? ? 'アクティブ' : '非アクティブ' %>
            </span>
          </div>

          <div class="mb-4">
            <small class="text-muted">
              作成日: <%= @habit.created_at.strftime("%Y年%m月%d日 %H:%M") %>
              <% if @habit.updated_at != @habit.created_at %>
                | 更新日: <%= @habit.updated_at.strftime("%Y年%m月%d日 %H:%M") %>
              <% end %>
            </small>
          </div>

          <div class="d-flex gap-2">
            <%= link_to "カレンダー表示", calendar_habit_path(@habit), class: "btn btn-success" %>
            <%= link_to "編集", edit_habit_path(@habit), class: "btn btn-primary" %>
            <%= link_to "削除", @habit, method: :delete,
                data: { confirm: "本当に削除しますか？" },
                class: "btn btn-danger" %>
            <%= link_to "習慣一覧に戻る", habits_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
