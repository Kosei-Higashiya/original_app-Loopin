<div class="container-fluid mt-4 px-4">
  <div class="row justify-content-center">
    <div class="col-md-12 col-xl-10">
      <div class="card shadow-lg border-2" style="border-color: #007bff;">
        <div class="card-header bg-primary text-white text-center py-4">
          <h1 class="card-title mb-2" style="font-size: 2rem;">📋 <%= @habit.title %></h1>
          <p class="mb-0" style="font-size: 1.1rem; margin-bottom: 1rem;">習慣の詳細情報</p>
        </div>
        <div class="card-body p-5">

          <% if @habit.description.present? %>
            <div class="mb-4">
              <div class="d-flex align-items-center mb-3">
                <div class="habit-icon me-3" style="font-size: 1.5rem;">📝</div>
                <h6 class="text-primary mb-0" style="font-size: 1.2rem; font-weight: 600;">詳細説明</h6>
              </div>
              <p class="card-text" style="font-size: 1rem; line-height: 1.6; color: #6c757d; margin-left: 3rem;"><%= simple_format(@habit.description) %></p>
            </div>
          <% end %>

          <div class="mb-4">
            <div class="d-flex align-items-center mb-3">
              <div class="habit-icon me-3" style="font-size: 1.5rem;">📅</div>
              <h6 class="text-primary mb-0" style="font-size: 1.2rem; font-weight: 600;">作成・更新情報</h6>
            </div>
            <div style="margin-left: 3rem;">
              <p class="text-muted small mb-1" style="font-size: 0.95rem;">
                作成日: <%= @habit.created_at.strftime("%Y年%m月%d日 %H:%M") %>
              </p>
              <% if @habit.updated_at != @habit.created_at %>
                <p class="text-muted small mb-0" style="font-size: 0.95rem;">
                  更新日: <%= @habit.updated_at.strftime("%Y年%m月%d日 %H:%M") %>
                </p>
              <% end %>
            </div>
          </div>

          <div class="d-flex justify-content-center gap-3 mt-4">
            <%= link_to calendar_habit_path(@habit),
                class: "btn btn-success btn-lg px-4",
                style: "font-size: 1.1rem; padding: 0.8rem 2rem; margin: 0.7rem 0rem;" do %>
              📊 カレンダー表示
            <% end %>
            <%= link_to "✏️ 編集", edit_habit_path(@habit),
                class: "btn btn-primary btn-lg px-4",
                style: "font-size: 1.1rem; padding: 0.8rem 2rem; margin: 0.7rem 0rem;" %>
            <%= link_to "🗑️ 削除", @habit,
                data: {
                    turbo_method: :delete,
                    turbo_confirm: "本当に削除しますか？"
                },
                class: "btn btn-danger btn-lg px-4",
                style: "font-size: 1.1rem; padding: 0.8rem 2rem; margin: 0.7rem 0rem;" %>
            <%= link_to "📋 習慣一覧に戻る", habits_path,
                class: "btn btn-outline-secondary btn-lg px-4",
                style: "font-size: 1.1rem; padding: 0.8rem 2rem; margin: 0.7rem 0rem;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
