<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
    <span class="calendar-title"><%= start_date.strftime("%B %d, %Y") %></span>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
  </div>

  <table class="table table-striped">
    <tbody>
      <tr>
        <%= content_tag :td, class: calendar.td_classes_for(start_date) do %>
          <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
            <% capture_haml(start_date, sorted_events.fetch(start_date, []), &passed_block) %>
          <% else %>
            <% passed_block.call start_date, sorted_events.fetch(start_date, []) %>
          <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>